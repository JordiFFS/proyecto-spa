# Configuración de entorno
NODE_ENV=development
HOST=0.0.0.0

# Ejemplo de configuración MQTT
MQTT_URL=mqtt://localhost:1883

# Puerto de la aplicación
PORT=3001

# Clave secreta para JWT (reemplazar con una cadena segura)
JWT_SECRET=your_jwt_secret_here

# URL pública de la app (para uso con CORS o generación de enlaces)
PUBLIC_URL=http://localhost:3001

# URI de MongoDB (reemplazar con tus credenciales)
DB_URI=your_mongodb_connection_string_here

# URI de PostgreSQL (reemplazar con tus credenciales)
PG_URI=your_postgresql_connection_string_here

# CORS: orígenes permitidos en producción separados por coma
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Configuración para Docker (opcional - descomenta si usas Docker)
# PG_URI=postgresql://user:password@db_postgres:5432/your_database
# DB_URI=mongodb://db_mongo:27017/your_database
